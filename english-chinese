import streamlit as st

def main():
    # 設定語言為英文
    st.set_config_option('deprecation.showfileUploaderEncoding', False)
    st.set_config_option('deprecation.showPyplotGlobalUse', False)
    st.set_config_option('translate.enabled', True)
    st.set_config_option('translate.cache', True)
    st.set_config_option('translate.show', 'en')

    # 在此繼續您的應用程式內容
    st.title("Your App Title")
    st.write("Hello, World!")

if __name__ == '__main__':
    main()
